{% extends 'base.html.twig' %}

{% block body %}
    <h1>Doctor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ doctor.id }}</td>
            </tr>
            <tr>
                <th>Fname</th>
                <td>{{ doctor.fname }}</td>
            </tr>
            <tr>
                <th>Lname</th>
                <td>{{ doctor.lname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ doctor.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ doctor.password }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ doctor.designation }}</td>
            </tr>
            <tr>
                <th>Department</th>
                <td>{{ doctor.departmentId}}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ doctor.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ doctor.phone }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ doctor.mobile }}</td>
            </tr>
            <tr>
                <th>Shortbiography</th>
                <td>{{ doctor.shortbiography | striptags }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                      <td><img src="{{asset(doctor.picture|replace({"web/":""}))}}" width="100px" height="150px" /></td>
          
            </tr>
            <tr>
                <th>Specialist</th>
                <td>{{ doctor.specialist }}</td>
            </tr>
            <tr>
                <th>Dob</th>
                <td>{% if doctor.dob %}{{ doctor.dob|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ doctor.sex }}</td>
            </tr>
            <tr>
                <th>Bloodgroup</th>
                <td>{{ doctor.bloodgroup }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ doctor.education  | striptags}}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if doctor.createdOn %}{{ doctor.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
           
            <tr>
                <th>Active</th>
                <td>{{ doctor.active }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('doctor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('doctor_edit', { 'id': doctor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
