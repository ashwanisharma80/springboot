{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notification_message</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification_message.id }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td style="width:60%;">{{ notification_message.message }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ notification_message.userId }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if notification_message.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if notification_message.createdOn %}{{ notification_message.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notification_message_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notification_message_edit', { 'id': notification_message.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
