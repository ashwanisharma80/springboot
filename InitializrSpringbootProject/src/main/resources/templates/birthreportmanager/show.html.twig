{% extends 'base.html.twig' %}

{% block body %}
    <h1>Birthreportmanager</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ birthReportManager.id }}</td>
            </tr>
            <tr>
                <th>Patientid</th>
                <td>{{ birthReportManager.patientId }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{% if birthReportManager.birthdate %}{{ birthReportManager.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ birthReportManager.title }}</td>
            </tr>
            <tr>
                <th>Descriptions</th>
                <td>{{ birthReportManager.descriptions }}</td>
            </tr>
            <tr>
                <th>Doctorid</th>
                <td>{{ birthReportManager.doctorId }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ birthReportManager.userId }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if birthReportManager.createdOn %}{{ birthReportManager.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedon</th>
                <td>{% if birthReportManager.modifiedOn %}{{ birthReportManager.modifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if birthReportManager.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('birthreportmanager_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('birthreportmanager_edit', { 'id': birthReportManager.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
