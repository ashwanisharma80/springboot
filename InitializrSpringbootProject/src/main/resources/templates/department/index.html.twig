{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <table id="example" class="table table-striped table-bordered" style="width:100%">

                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Department Name</th>

                            <th>Description</th>
                            <th>Active</th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set cntr=0 %}
                        {% for department in pagination %}
                            {% set cntr=cntr+1 %}
                            <tr>
                                <td><a href="{{ path('department_show', { 'id': department.id }) }}">{{ department.id }}</a></td>
                                <td>{{ department.name }}</td>
                                <td>{{ department.description }}</td>
                                <td>{% if department.active %}Yes{% else %}No{% endif %}</td>

                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('department_show', { 'id': department.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('department_edit', { 'id': department.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div></div>

    </div>
    <script>
        $(document).ready(function () {

            $('#example').DataTable();
        });
    </script>
{% endblock %}
