{% extends 'base.html.twig' %}

{% block body %}
    <h1>Schedules list</h1>
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <table id="example" class="table table-striped table-bordered" style="width:100%">

                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Doctorid</th>
                            <th>Availabledays</th>
                            <th>Availablestarttime</th>
                            <th>Endtime</th>
                            <th>Perpatienttime</th>
                           
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for schedule in schedules %}
                            <tr>
                                <td><a href="{{ path('schedule_show', { 'id': schedule.id }) }}">{{ schedule.id }}</a></td>
                                <td>{{ schedule.doctorId }}</td>
                                <td>{{ schedule.availableDays }}</td>
                                <td>{{ schedule.availableStarttime }}</td>
                                <td>{{ schedule.endtime }}</td>
                                <td>{{ schedule.perPatientTime }}</td>
                               
                                <td>{% if schedule.active %}Yes{% else %}No{% endif %}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('schedule_show', { 'id': schedule.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('schedule_edit', { 'id': schedule.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody></table>
            </div></div>

    </div>
    <script>
        $(document).ready(function () {

            $('#example').DataTable();
        });
    </script>
{% endblock %}
