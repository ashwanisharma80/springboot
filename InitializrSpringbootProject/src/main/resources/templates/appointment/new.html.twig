{% extends 'base.html.twig' %}

{% block body %}
    <script>
        $(function () {
            $('#hospital_hospitalmanagerbundle_appointment_departmentId').bind("change", function () {
                $.ajax({
                    url:"/doctor/"+this.value+"/doctorlist",
                    type: 'POST',
                    dataType: 'json',
                   
                    success: function (data) {
                        console.log(data);
                        document.getElementById('hospital_hospitalmanagerbundle_appointment_doctorId').innerHTML=data.data;
                       
                    }
                });
            });
        });
    </script>

    <script src="/ckeditor/ckeditor.js"></script>
    <script src="/ckeditor/js/sample.js"></script>
    <h1>Appointment creation</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('appointment_index') }}">Back to the list</a>
        </li>
    </ul>
    <script type="text/javascript">
        $(function () {
            $('textarea.ckeditor').ckeditor();

        });
    </script>
{% endblock %}
