{% extends 'base.html.twig' %}

{% block body %}
   
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <div class="col-3"><a href="{{ path('account_new') }}">Create New</a></div>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Acc Name</th>
                            <th>Acc Type</th>
                            <th>Descriptions</th>
                            <th>Createdon</th>
                            <th>Modifiedon</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set cntr=0 %}
                        {% for account in pagination %}
                            {% set cntr=cntr+1 %}

                            <tr>
                                <td><a href="{{ path('account_show', { 'id': account.id }) }}">{{ account.id }}</a></td>
                                <td>{{ account.acccountName }}</td>
                                <td>{{ account.accountType }}</td>
                                <td>{{ account.descriptions }}</td>
                                <td>{% if account.createdOn %}{{ account.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if account.modifiedOn %}{{ account.modifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if account.active %}Yes{% else %}No{% endif %}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('account_show', { 'id': account.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('account_edit', { 'id': account.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table></div></div>
        
    </div>
    <script>
        $(document).ready(function () {
           
            $('#example').DataTable();
        });
    </script>
{% endblock %}
