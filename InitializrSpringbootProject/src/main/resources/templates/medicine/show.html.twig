{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medicine</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medicine.name }}</td>
            </tr>
            <tr>
                <th>Medicinecategoryid</th>
                <td>{{ medicine.medicinecategoryId }}</td>
            </tr>
            <tr>
                <th>Descriptions</th>
                <td>{{ medicine.descriptions }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ medicine.price }}</td>
            </tr>
            <tr>
                <th>Manufacturedby</th>
                <td>{{ medicine.manufacturedBy }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ medicine.userId }}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{% if medicine.createdBy %}{{ medicine.createdBy|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedby</th>
                <td>{% if medicine.modifiedBy %}{{ medicine.modifiedBy|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if medicine.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medicine_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('medicine_edit', { 'id': medicine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
